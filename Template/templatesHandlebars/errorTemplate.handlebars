<div class='modal-dialog' role='document'>
    <div class='modal-content'>
        <div class='modal-header'>
            {{#if drawLink}}
                <h5 class='modal-title text-center'>{{ title }}<button type='button' class='close closeDrawLink' data-dismiss='modal' aria-label='Close'><span aria-hidden='true'>&times;</span></button></h5>
            {{else}}
                <h5 class='modal-title text-center'>{{ title }}<button type='button' class='close' data-dismiss='modal' aria-label='Close'><span aria-hidden='true'>&times;</span></button></h5>
            {{/if}}
        </div>
        <div class='modal-body'>
            <p>{{ text }}</p>
        </div>
        <div class='modal-footer'>
            {{#if drawLink}}
                <button type='button' class='btn btn-primary closeDrawLink' data-dismiss='modal'>OK</button>
            {{else}}
                <button type='button' class='btn btn-primary removeDialogModal' data-dismiss='modal'>OK</button>
            {{/if}}
        </div>
    </div>
</div>


                         