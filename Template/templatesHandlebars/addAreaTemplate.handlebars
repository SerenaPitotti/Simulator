
<div class='modal-dialog' role='document'>
    <div class='modal-content'>
        <div class='modal-header'>
            <h5 class='modal-title text-center'>Add an area<button type='button' class='close' data-dismiss='modal' aria-label='Close'><span aria-hidden='true'>&times;</span></button></h5>
        </div>
        <div class='modal-body'>
            <form id='addAreaForm' >
                <div class='form-group row'>
                    <label for='nomeMappaArea' class='col-sm-5 col-form-label'>Map area:</label>
                    <div class='col-sm-7'><p class='form-control-static' id='nomeMappaArea'>Corse</p></div>
                </div>
                <div class='form-group row'>
                    <label for='nomeArea' class='col-sm-5 col-form-label'>Name Area:</label>
                    <div class='col-sm-7'>          
                        <select class='form-control' id='nomeArea' required='required' >
                            {{#each aree}}
                                {{#if @first }}
                                    <option value="{{this}}" disabled selected>{{this}}</option>
                                {{else}}
                                    <option value="{{this}}" >{{this}}</option>
                                {{/if}}
                                
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class='form-group row'>
                    <label class='col-sm-5 col-form-label' for='probIniziale'>Area Initial Probability:  </label>
                    <div class='col-sm-7'><input type='text' class='form-control' name='probIniziale' id='probIniziale' /></div>
                </div>
                <div class='form-group row'>
                    <label class='col-sm-5 col-form-label' for='pesoArea'>Area Weight:  </label>
                    <div class='col-sm-7'><input type='text' class='form-control' name='pesoArea' id='pesoArea' /></div>
                </div>
                <div class='modal-footer'>
                    <button type='submit' id='okAddArea1' class='btn btn-primary offChangeNameArea' >OK</button>
                    <button type='button' class='btn btn-secondary offChangeNameArea removeDialogModal' data-dismiss='modal' >Cancel</button>
                </div>
           
            
            </form>
        </div>
    </div>
</div>


            
