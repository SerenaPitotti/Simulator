$<div class='modal-dialog' role='document'>
    <div class='modal-content'>
        <div class='modal-header'>
            <h5 class='modal-title text-center'>Remove an Area<button type='button' class='close' data-dismiss='modal' aria-label='Close'><span aria-hidden='true'>&times;</span></button></h5>
        </div>
        <div class='modal-body'>
            <div>You are going to remove the following area:</div>
            <form>
                <div class='form-group'>
                    <label for='nomeArea' class='col-sm-5 col-form-label'>Area Name:</label>
                    <div class='col-sm-7'><p class='form-control-static' >{{ nomeArea }}</p></div>
                </div>
                <div class='form-group'>
                    <label for='nomeMappa' class='col-sm-5 col-form-label'>Area Map :</label>
                    <div class='col-sm-7'><p class='form-control-static' >{{ nomeMappa }}</p></div>
                </div>
                <div class='form-group'>
                    <label for='valueArea' class='col-sm-5 col-form-label'>Area Weight:</label>
                    <div class='col-sm-7'><p class='form-control-static' >{{ peso }}</p></div>
                </div>
                <div class='form-group'>
                    <label for='probInizArea' class='col-sm-5 col-form-label'>Area Initial Probability:</label>
                    <div class='col-sm-7'><p class='form-control-static' > {{probIniz}}</p></div>
                </div>
                <div class='form-group' id='centroArea'>
                    <label class='col-sm-12 col-form-label text-center' for='centroArea'>Area Center:  </label>
                    <div class='form-group row'>
                        <label class='col-sm-2 col-form-label' for='latitudineCentroArea'>Latitude:  </label>
                        <div class='col-sm-4'><p class='form-control-static' >{{latitudine}}</p></div>
                        <div>
                            <label class='col-sm-2 col-form-label' for='longitudineCentroArea'>Longitude:  </label>
                            <div class='col-sm-4'><p class='form-control-static' >{{longitudine}} </p></div>
                        </div>
                    </div>
                </div>
                <div class='modal-footer'>
                    <button type='button' class='btn btn-secondary' data-dismiss='modal'>Cancel</button>
                    <button type='button' id='removeArea' class='btn btn-primary' data-dismiss='modal' data-nomeArea='{{ nomeArea }}'>OK</button>
                </div>
            </form>
        </div>

    </div>
</div>  
